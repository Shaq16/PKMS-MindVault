<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:padding="28dp">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to MindVault"
        android:textColor="#1C1C22"
        android:textStyle="bold"
        android:textSize="28sp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/quoteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1C1C22"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/captureBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Capture Note"
        android:textColor="#222222"
        android:textStyle="bold"
        android:background="#A999FF"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/quoteText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/queryBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Query Notes"
        android:textColor="#222222"
        android:textStyle="bold"
        android:background="#A999FF"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/captureBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
